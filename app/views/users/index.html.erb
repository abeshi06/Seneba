<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>
<%= form_tag(action: 'search') do %>
  <%= text_field_tag "search[username]", @search_username %>
  <%= submit_tag "送信" %>
  <%= link_to "リセット", users_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>パスワード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.userid %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '更新', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_user_path %>
